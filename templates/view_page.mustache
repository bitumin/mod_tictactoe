{{!
    @template mod_tictactoe/view_page

    Tictactoe view template

    * Context:
    contextid
    gameid
    state
        board
            index
            value
        turn
        result
        finished
}}
<div data-region="view-page" data-contextid="{{contextid}}" data-gameid="{{gameid}}">
    <div class='main-container'>
        <div class='board'>
            {{#state.board}}
            <div class='cell' data-indx="{{indx}}">{{value}}</div>
            {{/state.board}}
        </div>
        <div class='control'>
            <div class='ingame' id="human">It's your turn ...</div>
            <div class='ingame' id="ai">AI's turn...</div>
            <div class='ingame' id="won">You won!</div>
            <div class='ingame' id="lost">You lost!</div>
            <div class='ingame' id="draw">It's a draw!</div>
        </div>
    </div>
</div>
{{#js}}
    require(['mod_tictactoe/control'], function(control) {
        control.init({
            turn: "{{state.turn}}",
            result: "{{state.result}}",
            finished: {{state.finished}}
        });
    });
{{/js}}
